#include <stdio.h>

int main(){
    int n; printf("Enter rows: "); scanf("%d",&n);
    for (int i=n;i>=1;i--){
        for (int s=0;s<n-i;s++) putchar(' ');
        for (int k=1;k<=2*i-1;k++){
            if (i==n || k==1 || k==2*i-1) putchar('*');
            else putchar(' ');
        }
        putchar('\n');
    }
    return 0;
}
