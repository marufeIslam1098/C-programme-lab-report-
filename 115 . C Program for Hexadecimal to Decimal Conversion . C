
/* 115: Hexadecimal to Decimal conversion */
#include <stdio.h>
#include <stdlib.h>
int main() {
    char s[64];
    printf("Enter a hexadecimal number (e.g. 1A3f): ");
    if (scanf("%63s", s)!=1) return 0;
    char *end;
    long val = strtol(s, &end, 16); // base 16
    if (end == s) {
        printf("Invalid hexadecimal\n");
    } else {
        printf("Decimal: %ld\n", val);
    }
    return 0;
}
