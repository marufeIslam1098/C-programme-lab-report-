#include <stdio.h>

int main(){
    int n; printf("Enter rows: "); scanf("%d",&n);
    for (int line=0; line<n; line++){
        int C = 1;
        for (int i=0;i<n-line-1;i++) printf("  ");
        for (int i=0;i<=line;i++){
            if (i==0) C=1;
            else C = C * (line - i + 1) / i;
            printf("%d ", C);
        }
        printf("\n");
    }
    return 0;
}
