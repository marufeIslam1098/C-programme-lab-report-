#include <stdio.h>

int main() {
    int n;
    printf("Enter number of terms (N): ");
    if (scanf("%d",&n)!=1 || n<=0){ printf("Invalid N\n"); return 0; }
    long long a=0,b=1,sum=0;
    for (int i=0;i<n;i++){
        if (i%2==0) sum += a;
        long long next = a + b;
        a = b; b = next;
    }
    printf("Sum of Fibonacci numbers at even indices up to %d terms = %lld\n", n, sum);
    return 0;
}
