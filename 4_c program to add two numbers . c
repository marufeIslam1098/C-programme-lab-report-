#include <stdio.h>

int main() {
    // Declare variables to store the two numbers
    float num1, num2, sum;

    // Ask the user for input
    printf("Enter first number: ");
    scanf("%f", &num1);  // Read first number from user

    printf("Enter second number: ");
    scanf("%f", &num2);  // Read second number from user

    // Calculate the sum
    sum = num1 + num2;

    // Display the result
    printf("Sum of %.2f and %.2f is %.2f\n", num1, num2, sum);

    return 0;
}
